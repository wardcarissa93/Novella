<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Novella</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Novella.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style="display: flex; flex-direction: column; justify-content: space-between;">
                <div id="nav-right-container">
                    <div id="sub-nav-1">
                        <button class="navbar-toggler ml-auto" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <form class="searchbar" method="get" action="@Url.Action("Search", "Home")">
                            <input id="search-input" type="text" placeholder="Search.." name="query" />
                            <button id="search-button" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                                </svg>
                            </button>
                        </form>

                        <a href="@Url.Action("Cart", "Home")">
                            <div class="cart-icon-container">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag-fill" viewBox="0 0 16 16">
                                    <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4z" />
                                </svg>
                                <div id="nav-cart-amount"></div>
                            </div>
                        </a>
                    </div>

                    <div id="sub-nav-2">
                        <partial name="_LoginPartial" />
                    </div>

                </div>

                <div id="nav-left-container" class="d-sm-flex flex-sm-column align-items-sm-start">
                    <!-- Move the button inside the container -->
                 
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">  
                        <ul class="navbar-nav " style="width: 100%; justify-content: center;">
                            <li class="nav-item" style="display:flex; justify-content: center; ">
                                <a id="navbar-brand" class="nav-link" style="margin: 0px;" asp-area="" asp-controller="Home" asp-action="Index"><img id="nav-logo" src="~/Images/logo/Novella_logo_with_text.png"></img></a>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Pendant">Pendant</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Choker">Choker</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Chain">Chain</a>
                            </li>
                            @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("SuperUser"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Admin Products</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="UserRole" asp-action="Index">Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Role" asp-action="Index">Roles</a>
                                </li>
                            }
                            
                    </div>
                    </ul>                
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container content-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer-container" class="border-top footer text-muted">
        <div class="customer-care">
            <p class="customercare-header">Customer Care</p>
            <div class="care-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                    <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z" />
                </svg>
                <p>admin@novella.com</p>
            </div>
            <div class="care-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z" />
                </svg>
                <p>1-800-238-9976</p>
            </div>           
        </div>
        <div class="footer-logo">
            <img id="logo-footer" src="~/Images/logo/novellla-logo.png" />
            </div>
        <div class="mission" ">
            <p class="mission-header">Our Mission</p>
            <p class="mission-text">Discover timeless </p>
            <p class="mission-text">sophistication and</p>
            <p class="mission-text"> beauty in every piece,</p>
            <p class="mission-text">each designed to</p>
            <p class="mission-text">elevate your style </p>
            <p class="mission-text">and tell a unique</p>
            <p class="mission-text">story of craftsmanship</p>
        </div> 
        @* <div class="container">
            &copy; 2023 - Novella - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div> *@
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


    
    <script>
        // Function to update the cart amount in the layout
        function updateCartAmount() {
            $.ajax({
                url: '@Url.Action("GetTotalQuantityInCart", "Home")',
                type: 'GET',
                success: function (data) {
                    document.getElementById('nav-cart-amount').textContent = data;
                    sessionStorage.setItem('cartAmount', data);
                    console.log(data);
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
        }

        // Call the function to update cart amount on page load
        $(document).ready(function () {
            updateCartAmount();
        });
    </script>




    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
